{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "lib": ["ES2015", "DOM"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
